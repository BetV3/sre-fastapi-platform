# Application
APP_NAME=FastAPI Platform
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=false

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=1
RELOAD=false

# API
API_V1_PREFIX=/api/v1

# Redis
REDIS_URL=redis://redis:6379/0
REDIS_POOL_SIZE=10

# CORS (comma-separated for multiple origins)
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Metrics
METRICS_ENABLED=true
